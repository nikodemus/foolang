class TestClock { assert clock }
    is TestSuite

    direct method assert: assert
        self assert: assert clock: False!

    method system: system
        clock = system clock!

    method test_clock_time
        let offset = Time user: 0.1 system: 0.1 real: 0.1.
        -- Easiest way to make sure t1 > t0 > 0
        let t0 = clock time + offset.
        let t1 = t0 + offset.
        let delta = t1 - t0.
        assert true: { t1 > delta }!
end
