@class Playground [input output]

@class-method Playground terminal
      ^self createInstance: [Stdin Stdout]

@method Playground step |result|
      output print: ''> ''; flush.
      result := Foolang evaluate: input.
      output print: result; lf.

@method Playground run
   Stdout
     print: 'Foolang playground: enter code here to evaluate it.';
     lf.

@method Playground loop
    { true } while: { self step }
