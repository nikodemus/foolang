class AstLexicalRef { variable frameOffset::Integer source }
    is AstNode

    method type
        let type = variable type.
        (Type includes: type)
            => { return type }.
        (AstGlobal includes: type)
            => { return DefinitionType definition: type definition }.
        HostType type: type!

    method isImmediate
        True!

    method isNonLocal
        frameOffset > 0!

    direct method variable: variable frameOffset: offset
        self
            variable: variable
            frameOffset: offset
            source: False!

    method withSource: newSource
        (source is False) assert.
        source = newSource.
        self!

    method visitBy: visitor
        visitor visitLexicalRef: self!

    method assign: value
        variable noteAssignment: source.
        AstLexicalSet
            variable: variable
            frameOffset: frameOffset
            value: value!

    method displayOn: stream
        stream writeString: "#<AstLexicalRef ".
        stream writeString: variable name.
        stream writeString: ">"!
end

