class AstDefinedMethod { home selector argumentVariables returnType _body frameSize
                         isDirect isRequired hasNonLocalReturns hasNonLocalReferences
                         compilerInfo }
    is AstMethod

    direct method home: home
                  selector: selector
                  argumentVariables: argumentVariables
                  returnType: returnType
                  isDirect: isDirect
                  isRequired: isRequired
        self
            home: home
            selector: selector
            argumentVariables: argumentVariables
            returnType: returnType
            _body: False
            frameSize: False
            isDirect: isDirect
            isRequired: isRequired
            hasNonLocalReturns: False
            hasNonLocalReferences: False
            compilerInfo: CompilerInfo new!

    method noteNonLocalReturn
        hasNonLocalReturns = True!

    method noteNonLocalReference
        hasNonLocalReferences = True!

    method stackContext
        hasNonLocalReferences is False!

    method hasBody
        self isRequired not!

    method body: bodyVal
        isRequired
            ifTrue: { Error raise: "Required methods have no body: {selector}" }.
        _body = bodyVal.
        self!

    method body
        isRequired
            ifTrue: { Error raise: "{self} is a required method: it has no body." }.
        _body is False
            ifTrue: { Error raise: "Body of {self} is not set yet." }.
        _body!

    method frameSize: frameSizeVal
        frameSize is False assert: "frame size not set".
        frameSize = frameSizeVal!

    method addTemp
        let offset = frameSize.
        frameSize = frameSize + 1.
        offset!

    method invoke: arguments on: receiver
        AstInterpreter
            invokeMethod: self
            on: receiver
            with: arguments!

    method signature
        argumentVariables collect: { |var| var type }!

    -- FIXME: duplicate methods below

    method arity
        argumentVariables size!

    method argumentCount
        argumentVariables size!

    method displayOn: stream
        self isDirect
            ifTrue: { stream print: "#<AstMethod {home name} classOf{selector}>" }
            ifFalse: { stream print: "#<AstMethod {home name}{selector}>" }!

    method toString
        StringOutput with: { |out| self printOn: out }!
end

