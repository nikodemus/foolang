class AstInterface { name _interfaces _directMethods _instanceMethods
                     _allInterfaces global _env compilerInfo }
    is AstDefinition
    is AstMethodHome

    direct method name: name
                  interfaces: interfaces
                  env: env
        let global = env global: name.
        let theInterface = self
                               name: name
                               _interfaces: interfaces
                               _directMethods: False
                               _instanceMethods: False
                               _allInterfaces: False
                               global: global
                               _env: env
                               compilerInfo: CompilerInfo new.
        global define: theInterface.
        theInterface!

    method eval
        global hasValue
            ifTrue: { return global eval }.
        { let result = Interface
                           new: name
                           interfaces: self interfaceObjects
                           directMethods: self ownDirectMethods
                           instanceMethods: self ownInstanceMethods.
          _env classes at: result put: self.
          global value: result }
        finally: { _env = False }!

    method isClass
        False!

    method _interfaces
        _interfaces!

    method _directMethods
        _directMethods!

    method _instanceMethods
        _instanceMethods!

    method _readerMethods
        []!

    method slots
        []!

    method _allInterfaces
        _allInterfaces!

    method _allInterfaces: list
        (_allInterfaces is False) assert: "Oops, _allInterfaces already set!".
        _allInterfaces = list asArray!

    method _directMethods: methods
        _directMethods = methods!

    method _instanceMethods: methods
        _instanceMethods = methods!

    method visitBy: visitor
        visitor visitInterfaceDefinition: self!

    method toString
        "#<AstInterface {name}>"!
end

class AstClass { name superclass _slots
                 _interfaces _directMethods _instanceMethods
                 _allInterfaces global _env compilerInfo }
    is AstDefinition
    is AstMethodHome

    direct method name: name
                  slots: slots
                  interfaces: interfaces
                  env: env
        self name: name
             slots: slots
             interfaces: interfaces
             env: env
             isBuiltin: False!

    direct method name: name
                  slots: slots
                  interfaces: interfaces
                  env: env
                  isBuiltin: isBuiltin
        let global = env global: name.
        let theClass = self
                           name: name
                           superclass: False
                           _slots: slots
                           _interfaces: interfaces asList
                           _directMethods: False
                           _instanceMethods: False
                           _allInterfaces: False
                           global: global
                           _env: env
                           compilerInfo: CompilerInfo new.
        isBuiltin
            ifTrue: { global redefine: theClass }
            ifFalse: { global define: theClass }.
        theClass!

    direct method name: name
                  superclass: superclass
                  interfaces: interfaces
                  env: env
        let global = env global: name.
        let theClass = self
                           name: name
                           superclass: superclass
                           _slots: False
                           _interfaces: ([superclass] append: interfaces)
                           _directMethods: False
                           _instanceMethods: False
                           _allInterfaces: False
                           global: global
                           _env: env
                           compilerInfo: List new.
        global define: theClass.
        theClass!

    method isClass
        True!

    method ifSuperclass: then ifNot: else
        superclass is False
            ifTrue: else
            ifFalse: then!

    method slots
        self
            ifSuperclass: { -- Debug println: "slots for {superclass definition}".
                            superclass definition slots }
            ifNot: { _slots }!

    method isBuiltin
        self
            ifSuperclass: { superclass definition isBuiltin }
            ifNot: { False }!

    method _interfaces
        _interfaces!

    method _directMethods
        _directMethods!

    method _instanceMethods
        _instanceMethods!

    method _allInterfaces
        _allInterfaces!

    method _allInterfaces: list
        (_allInterfaces is False) assert: "Oops, _allInterfaces already set!".
        _allInterfaces = list asArray!

    method _directMethods: methods
        _directMethods = methods!

    method _instanceMethods: methods
        _instanceMethods = methods!

    method markFunction
        self
            ifSuperclass: { superclass definition markFunction }
            ifNot: { "foo_mark_instance" }!

    method _readerMethods
        self _methodDictionary:
            ((self slots reject: #isPrivate)
                 collect: { |each|
                            AstReaderMethod home: self slot: each })!

    method eval
        global hasValue
            ifTrue: { return global eval }.
        { let slots = self slots asArray.
          let result
              = Class
                  new: name
                  slots: slots
                  interfaces: self interfaceObjects
                  directMethods: (self ownDirectMethods
                                      reject: #isConstructor)
                  instanceMethods: self ownInstanceMethods.
          -- KLUDGE: Bootstrap implementation doesn't do layouts,
          -- but the layout object is how we access slots in objects.
          -- Put in a dummy one that uses the bootstrap host __atSlot:
          -- methods.
          Foolang isSelfHosted
              ifFalse: { let layout = Layout dummy.
                         slots do: { |each| each layout: layout } }.
          _env classes put: self at: result.
          global value: result }
        finally: { _env = False }!

    method constructor
        self slots
            ifEmpty: { #new }
            ifNotEmpty: { Selector
                              intern: (StringOutput
                                        with: { |out|
                                                self slots
                                                    do: { |each|
                                                          out print: each name.
                                                          out print: ":" } }) }!

    method visitBy: visitor
        visitor visitClassDefinition: self!

    method toString
        "#<AstClass {name}>"!
end

-- FIXME: Not happy with layout being public. Should be
-- able to hand out a single slot without exposing the
-- whole instance through the layout. However, subclasses
-- have shared slots and layout, but class_target_ext.foo
-- gets slots and creates the layout -- so it needs the
-- access. Should probably pass in the layout there instead.
class AstSlot { name index type layout }
    is Object

    direct method name: name
                  index: index
                  type: type
        self name: name
             index: index
             type: type
             layout: False!

    method referenceUpwards: offset
        AstSlotRef slot: self!

    method isPrivate
        name isPrivate!

    method hasLayout
        return (layout is False) not!

    method layout: new
        layout is False
            assert: "AstSlot layout already set!".
        layout = new!

    method at: object
        layout is False
            ifTrue: { panic "{self} layout not set, cannot read from {object}" }.
        layout at: index
               in: object!

    method put: value at: object
        layout is False
            ifTrue: { panic "{self} layout not set, cannot write to {object}" }.
        layout put: value
               at: index
               in: object!

    method displayOn: stream
        stream writeString: "#<AstSlot ".
        stream print: name.
        stream writeString: ">"!
end

